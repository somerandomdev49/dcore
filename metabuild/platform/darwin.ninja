# platform-specific file for Darwin (MacOS)

include metabuild/platform/base.ninja

compiler_cpp = clang++ 
compiler_c = clang
linker = clang++
clike_flags = -Wall -Wextra -g -DDCORE_STD_64BIT $warnings $includes $libs_cflags
cpp_flags = $clike_flags -std=c++17 -DLOGURU_WITH_STREAMS -Wno-unused-private-field
c_flags = $clike_flags -std=c99
ld_flags = -lglfw3 -std=c++17 -framework IOKit -framework Cocoa -framework OpenGL $libs_ldflags
